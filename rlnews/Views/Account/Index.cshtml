@model rlnews.ViewModels.UserViewModel

@{
    ViewBag.Title = "Index";
}

<div class="rl-header">
    <div class="sm-container text-center">
        @if (Session["UserId"] != null)
        {
            <h1>Your Account</h1>
        }
    </div>
</div>

<div class="container">
    <div class="col-md-3">
        <h2>Account Details</h2>
        <hr/>
        <p>Email: @Model.Email</p>
        <p>Username: @Model.Username</p>
        <p>My Team: @Model.TeamName</p>
    </div>
    <div class="col-md-9">
        <h2>Recent Activity</h2>
        <hr/>

        @if (Model.ActivityList.Count <= 0)
        {
            <p>No Activity Found.</p>
        }

        @foreach (var activityItem in Model.ActivityList.OrderByDescending(x => x.ActivityId))
        {
            <p>@activityItem.ActivityContent - @activityItem.ActivityDate.Day/@activityItem.ActivityDate.Month/@activityItem.ActivityDate.Year</p>
        }

    </div>
</div>